[user]
    name = John Goulah
    email = jgoulah@gmail.com
[github]
    user = jgoulah
[branch]
    autosetupmerge = true
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    whitespace = red reverse
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    l = log --graph --decorate
    lg = log --decorate -p
    ap = add --patch
	unstage = reset HEAD
    dc = diff --cached
    l = log --graph --decorate
    lg = log --decorate -p
    ap = add --patch
    unstage = reset HEAD
    # commits in short form
    ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    # commits showing changed files
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    # find file containing arg
    f = "!git ls-files | grep -i"
    # find string in codebase
    grep = grep -Ii
    gr = grep -Ii
    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"
[apply]
	whitespace = nowarn
[gist]
	private = yes
	extension = .md
